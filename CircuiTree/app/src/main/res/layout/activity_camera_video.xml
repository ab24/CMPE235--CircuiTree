<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ab.circuitree.CameraVideoActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capture Your Moment"
        android:id="@+id/cameraButton"
        android:layout_alignParentTop="true"
        android:layout_marginTop="98dp"
        android:background="#3b5998"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/videoButton"
        android:layout_alignStart="@+id/videoButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Your Moment"
        android:id="@+id/videoButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:background="#3b5998" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Audio"
        android:id="@+id/audioButton"
        android:layout_below="@+id/videoButton"
        android:layout_alignStart="@+id/cameraButton"
        android:layout_marginTop="77dp"
        android:textColor="#ffffff"
        android:background="#3b5998"
        android:layout_alignEnd="@+id/videoButton" />
</RelativeLayout>
